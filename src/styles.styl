/* You can add global styles to this file, and also import other style files */
body
  font-family 'Fira Sans', Helvetica, Sans-serif
  margin 0
  padding 0
  h1 
    .smaller
      font-size 48%
      line-height 50% !important 
      position absolute
      width 100%
      left 0
      bottom 10px
      opacity .4
    .frog
      position absolute
      width 200px
      height auto
      right 45px
      top 31px
  *
    box-sizing border-box
  article
    margin 0 auto
    max-width 900px
    overflow hidden
    position relative
    width calc(100vw - 100px)
    pre
      overflow-x auto
    h2
      &.title
        font-size 22pt
        font-weight 400
        color rgba(0,0,0,0.8)
        margin 2em 0
    .spinner-content
      position relative
    p
      font-size 12pt
      &.important
        background rgba(255,255,0,.3)
        display block
        color rgba(0,0,0,.8)
        padding 6pt
        border solid 2px rgba(0,0,0,0.2)
        border-radius 4pt
        svg
          position relative
          display inline-block
          top 3px
          margin-right 6px
      code
        color rgba(120,44,120,.8)
        font-size 12pt